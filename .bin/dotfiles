#!/usr/bin/env bash
DOTPREFIX="dotfiles"

_dotfiles_hook() {
  local h
  h="$1/$2"
  if [ ! -e "$h" ]; then
    return
  fi
  if [ ! -x "$h" ]; then
    echo "hook ($h) is not executable"
    return
  fi
  $h
}

_lsfiles() {
  {
    git ls-files
    git ls-files --others
  } | grep '^\.' | grep -v "^$DOTPREFIX"
}

dotfiles() {
  local f
  if [ ! -d "$DOTPREFIX" ]; then
    if [ ! -e "$DOTPREFIX" ]; then
      echo "not a dotfiles repository"
      return
    fi
  fi
  _dotfiles_hook "$DOTPREFIX" "pre"
  for f in $(_lsfiles); do
    d="$HOME/"$(dirname "$f")
    mkdir -p "$d"
    ln -sf "$PWD/$f" "$HOME/$f"
  done
  _dotfiles_hook "$DOTPREFIX" "post"
}

dotfiles
