# Maintainer: Sean Enck <enckse@voidedtech.com>
pkgname=efm-langserver
pkgver=0.0.44
pkgrel=1
pkgdesc="Generic language server implementation"
url="https://github.com/mattn/efm-langserver"
license="MIT"
arch="all"
options="!check chmod-clean net"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/mattn/efm-langserver/archive/refs/tags/v$pkgver.tar.gz"

export GOPATH="$srcdir"

build() {
    go build $GOFLAGS
}

package() {
    install -Dm755 efm-langserver "$pkgdir/usr/bin/efm-langserver"
}

