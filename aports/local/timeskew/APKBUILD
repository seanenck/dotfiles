pkgname=timeskew
pkgver=2023.07.06
pkgrel=9
pkgdesc="simplistic timeskew manager script."
url="https://github.com/enckse/dotfiles"
license="GPL-3"
arch="noarch"
options="!check chmod-clean net"
makedepends=""
source="timeskew.sh timeskew.openrc"
depends="bash"

package() {
  install -Dm755 timeskew.openrc "$pkgdir/etc/init.d/timeskew"
  install -Dm755 timeskew.sh "$pkgdir/usr/bin/timeskew"
}

