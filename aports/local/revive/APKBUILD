# Maintainer: Sean Enck <enckse@voidedtech.com>
pkgname=revive
pkgver=1.3.2
pkgrel=1
pkgdesc="Fast, configurable, extensible, flexible, and beautiful linter for Go."
url="https://github.com/mgechev/revive"
license="BSD"
arch="all"
options="!check chmod-clean net"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/mgechev/revive/archive/refs/tags/v$pkgver.tar.gz"

export GOPATH="$srcdir"

build() {
    go build $GOFLAGS
}

package() {
    install -Dm755 revive "$pkgdir/usr/bin/revive"
}

sha512sums="
a448e2f83aae81f248857568491d2bae3c0aa73b344d7c61ca6bfc9dfe3b9a0aa48f574b414ced439ebd0b67c0bc33fdbe59dc9f869ebe1d9d4867059c6bdc95  revive-1.3.2.tar.gz
"
