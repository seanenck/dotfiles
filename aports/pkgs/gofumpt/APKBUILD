# Maintainer: Sean Enck <enckse@voidedtech.com>
pkgname=gofumpt
pkgver=0.5.0
pkgrel=1
pkgdesc="A stricter gofmpt"
url="https://github.com/mvdan/gofumpt"
license="BSD"
arch="all"
options="!check chmod-clean net"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/mvdan/gofumpt/archive/refs/tags/v$pkgver.tar.gz"

export GOPATH="$srcdir"

build() {
  go build $GOFLAGS
}

package() {
  install -Dm755 gofumpt "$pkgdir/usr/bin/gofumpt"
}

sha512sums="
