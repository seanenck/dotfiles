{
  "Flags": [
    "container",
    "linux"
  ],
  "Settings": {
    "Ignores": [
      "^build/",
      "^target/"
    ],
    "Tools": [
      {
        "Name": "revive",
        "Command": [
          "revive"
        ]
      },
      {
        "Name": "govet",
        "Command": [
          "go",
          "vet"
        ],
        "Ignores": [
            "named files must all be in one directory"
        ]
      },
      {
        "Name": "staticcheck",
        "Command": [
          "staticcheck",
          "-checks",
          "all",
          "-debug.run-quickfix-analyzers"
        ],
        "Ignores": [
            "named files must all be in one directory"
        ]
      },
      {
        "Name": "gofumpt",
        "Command": [
          "gofumpt",
          "-l",
          "-extra"
        ]
      }
    ]
  }
}
