[core]
    autocrlf = input
[include]
    path = ~/.config/git/tools.config
[diff]
    colorMoved = default
[grep]
    lineNumber = true
[log]
    date = iso-strict
[pull]
    rebase = false
[push]
    default = simple
[status]
    short = true
    branch = true
    showStash = true
    showUntrackedFiles = all
[user]
    useConfigOnly = true
    name = Sean Enck
[diff "lb"]
    textconv = lb conv
[help]
    format = man
[merge]
    conflictstyle = diff3
[url "~/Active/git/private/"]
    insteadOf = private:
[url "~/Active/git/upstream/"]
    insteadOf = upstream:
[includeIf "hasconfig:remote.*.url:private:**"]
    path = ~/.config/git/dev.config
[includeIf "hasconfig:remote.*.url:upstream:**"]
    path = ~/.config/git/dev.config
[alias]
	differ = diff --word-diff
