{
  "boot": {
    "efi": {
      "store": "$CONFIG/efi_vars.fd"
    }
  },
  "identifier": "$CONFIG/machine_id",
  "resources": {
      "cpus": 2,
      "memory": 8192
  },
  "shares": {
      "workspace": {
          "path": "~/Workspace"
      }
  },
  "disks": [
    { 
      "mode": "usb",
      "path": "$CONFIG/alpine.iso"
    },
    { 
      "mode": "block",
      "path": "$CONFIG/ovl.img"
    },
    { 
      "mode": "block",
      "path": "$CONFIG/var.img"
    }
  ],
  "env": {
      "CONFIG": "~/.config/vms/"
  },
  "networks": [
      {
          "mac": "a6:ef:74:93:54:32",
          "mode": "nat"
      }
  ]
}
