{
  "boot": {
    "efi": {
      "store": "$CONFIG/efi"
    }
  },
  "identifier": "$CONFIG/machine",
  "resources": {
    "cpus": 2,
    "memory": 8192
  },
  "serial": "none",
  "disks": [
    {
      "mode": "nvme",
      "path": "$CONFIG/root.img"
    },
    {
      "mode": "nvme",
      "path": "$CONFIG/home.img"
    }
  ],
  "env": {
    "CONFIG": "~/Active/current/VMs/alpine"
  },
  "shares": {
    "active": {
        "path": "~/Active"
    },
    "env": {
        "path": "~/Env"
    },
    "workspace": {
        "path": "~/Workspace"
    },
    "downloads": {
        "path": "~/Downloads"
    },
    "documents": {
        "path": "~/Documents"
    }
  },
  "networks": [
    {
      "mac": "5e:49:6b:f7:7f:84",
      "mode": "nat"
    }
  ]
}
