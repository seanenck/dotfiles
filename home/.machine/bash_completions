_git_oclone() {
    local cur opts
    if [ "$COMP_CWORD" -eq 2 ]; then
        cur=${COMP_WORDS[COMP_CWORD]}
        opts=$(ls $HOME/.env/workstations/git | sed 's/$/:/g')
        COMPREPLY=( $(compgen -W "$opts" -- "$cur") )
    fi
}

_pman() {
    local cur opts
    if [ "$COMP_CWORD" -eq 1 ]; then
        cur=${COMP_WORDS[COMP_CWORD]}
        opts=$(ls $HOME/.env/dotfiles/containers)
        COMPREPLY=( $(compgen -W "$opts" -- "$cur") )
    fi
}

complete -F _pman -o bashdefault -o default pman
