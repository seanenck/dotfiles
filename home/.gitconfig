[core]
    editor = hx
    autocrlf = input
    pager = delta
[grep]
    lineNumber = true
[log]
    date = iso-strict
[pull]
    rebase = false
[push]
    default = simple
[status]
    short = true
    branch = true
    showStash = true
    showUntrackedFiles = all
[user]
    name = Sean Enck
    email = enckse@voidedtech.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAILF34csErDEvpiwtv+SGIuhZ5c1cjmSGRSmUnG3nSeBe workstation
[help]
    format = man
[commit]
    gpgSign = true
[tag]
    gpgSign = true
[diff "lb"]
    textconv = lb hash
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[merge]
	conflictstyle = diff3
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
    features = decorations
    keep-plus-minus-markers = true
    line-numbers = true
[diff]
    colorMoved = default
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
