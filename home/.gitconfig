[core]
    editor = hx
    autocrlf = input
[grep]
    lineNumber = true
[log]
    date = iso-strict
[pull]
    rebase = false
[push]
    default = simple
[status]
    short = true
    branch = true
    showStash = true
    showUntrackedFiles = all
[user]
    name = Sean Enck
    email = enckse@voidedtech.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAILF34csErDEvpiwtv+SGIuhZ5c1cjmSGRSmUnG3nSeBe workstation
[help]
    format = man
[commit]
    gpgSign = true
[tag]
    gpgSign = true
[pager]
    log = diff-highlight | less
    diff = diff-highlight | less
    show = diff-highlight | less
[diff "lb"]
    textconv = lb hash
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
