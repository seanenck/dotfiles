{
  "boot": {
    "efi": {
      "store": "$CONFIG/efi.alpine"
    }
  },
  "identifier": "$CONFIG/machine.alpine",
  "resources": {
    "cpus": 2,
    "memory": 8192
  },
  "serial": "none",
  "disks": [
    {
      "mode": "block",
      "path": "$CONFIG/boot.iso"
    },
    {
      "mode": "nvme",
      "path": "$CONFIG/ovl.img"
    },
    {
      "mode": "nvme",
      "path": "$CONFIG/data.img"
    }
  ],
  "env": {
    "CONFIG": "~/.config/vm"
  },
  "shares": {
    "active": {
        "path": "~/Active"
    },
    "env": {
        "path": "~/Env"
    },
    "documents": {
        "path": "~/Documents"
    },
    "home": {
        "path": "~/.local/state/vm/alpine"
    },
    "downloads": {
        "path": "~/Downloads"
    },
    "workspace": {
        "path": "~/Workspace"
    }
  },
  "networks": [
    {
      "mac": "5e:49:6b:f7:7f:84",
      "mode": "nat"
    }
  ]
}
