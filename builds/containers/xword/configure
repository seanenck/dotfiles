#!/usr/bin/env bash
podman build -f Containerfile -t xword
for f in $(./dates); do
    for t in $(echo "$REMOTES" | tr ',' '\n'); do
      echo "$f $t"
        podman run --volume $BUILD:/opt:z --workdir /opt -i --rm xword xword-dl $t --date $f
        sleep 0.5
    done
done
IFS=$'\n'
for f in $(find $BUILD -type f -name "*.puz" -exec basename {} \;); do
    echo "processing: $f"
    podman run --volume $BUILD:/opt:z -i --workdir /puz --rm xword ./main.js "/opt/$f"
done
