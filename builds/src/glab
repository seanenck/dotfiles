TAG    := 1.25.3
TAR    := glab.tar.gz
SITE   := "https://gitlab.com/gitlab-org/cli"
SRCDIR := cli-v$(TAG)
URL    := "$(SITE)/-/archive/v$(TAG)/cli-v$(TAG).tar.gz"
BINARY := bin/glab
BUILD  := go build $(GOFLAGS) -ldflags " -X main.debugMode=false" -o $(BINARY) gitlab.com/gitlab-org/cli/cmd/glab
SUMS   := "4cc090b9ad7ee6608d70e3a7fb5ca91a505eff12cf967a944bd0581cb6a83972  $(TAR)"

install:
	install -Dm755 $(BINARY) $(DESTDIR)/glab
