{
  "boot": {
    "efi": {
      "store": "$CONFIG/efi_vars.fd"
    }
  },
  "identifier": "$CONFIG/machine_id",
  "resources": {
      "cpus": 2,
      "memory": 8192 
  },
  "disks": [
    { 
      "mode": "usb",
      "path": "$CONFIG/alpine-3.19.1.iso"
    },
    { 
      "mode": "block",
      "path": "$CONFIG/apkovl.img"
    },
    { 
      "mode": "block",
      "path": "$CONFIG/data.img",
    },
    { 
      "mode": "block",
      "path": "$CONFIG/home.img",
    }
  ],
  "env": {
      "CONFIG": "~/.config/vm"
  },
  "networks": [
    {
      "mode": "nat",
      "mac": "a6:ef:74:93:54:32"
    }
  ],
  "shares": {
    "downloads": {
       "path": "~/Downloads"
    },
    "workdir": {
       "path": "~/.workdir"
    }
  }
}
