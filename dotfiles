#!/bin/bash
_install() {
  echo ".config/blap/"
  echo ".config/shellrc/"
  if command -v just > /dev/null; then
    echo ".justfile"
  fi
  if command -v bat > /dev/null; then
    echo ".config/bat/"
  fi
  if command -v nvim > /dev/null; then
    echo ".config/nvim/"
  fi
  case "$(basename "$SHELL")" in
    "bash")
      echo ".bash_aliases"
      echo ".bashrc"
      echo ".bash_profile"
      ;;
    "zsh")
      echo ".zshrc"
      ;;
  esac
  if command -v abuild > /dev/null; then
    mkdir -p "$HOME/.abuild"
    {
      echo "# DO NOT EDIT"
      cat .abuild/abuild.conf
    } > "$HOME/.abuild/abuild.conf"
  fi
  if command -v git > /dev/null; then
    if command -v delta > /dev/null; then
      echo ".config/git/"
      echo ".ssh/"
    else
      echo ".gitconfig"
      echo ".config/git/tools.config"
    fi
  fi
  
  case $(uname) in
    "Linux")
      echo ".config/user-dirs.dirs"
      if [ -n "$DESKTOP_SESSION" ] && [ "$DESKTOP_SESSION" = "sway" ]; then
        echo ".config/waybar/"
        echo ".config/rofi/"
        echo ".config/sway/"
      fi
      ;;
    "Darwin")
       VMDIR="$HOME/Active/current/VMs"
       if [ -d "$VMDIR" ]; then
         for vm in $(ls "$VMDIR"); do
           echo ".config/vfu/$vm.json"
         done
       fi
       ;;
  esac
  if [ -n "$TERMINAL_EMULATOR" ]; then
    echo ".config/$TERMINAL_EMULATOR/"
  fi
}

DRYRUN=0
CHECK=0
if [ -n "$1" ]; then
  case "$1" in
    "--dry-run")
      DRYRUN=1
      ;;
    "--check")
      CHECK=1
      ;;
    *)
      echo "unknown command: $1"
      exit 1
      ;;
  esac
fi

DIR=""
SET=""
FILE=""
for SET in $(_install | sort -u); do
  for FILE in $(find $SET -type f); do
    if [ "$CHECK" -eq 1 ]; then
      if ! test -L "$HOME/$FILE"; then
        echo "non-link dotfile: $FILE"
      fi
      continue
    fi
    if [ "$DRYRUN" -eq 1 ]; then
      echo "$FILE" | sed "s#HOME/##g"
      continue
    fi
    DIR=$(dirname "$FILE")
    if [ "$DIR" != "." ]; then
      mkdir -p "$HOME/$DIR"
    fi
    ln -sf "$PWD/$FILE" "$HOME/$FILE"
  done
done

unset SET FILE DRYRUN CHECK
