set $mod Mod1

set $term kitty
set $swaypy wm
set $menu waymenu

gaps outer 5px
gaps inner 5px

exec swayidle -w \
    timeout 300 'swaylock -f -c 000000' \
    timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 000000'

exec $swaypy focus-model
exec $swaypy displays

output * bg #695939 solid_color

# lock/sleep
bindsym $mod+Shift+s exec $swaypy sleep
bindsym $mod+Shift+l exec pkill --signal=SIGUSR1 swayidle

# process creation/removal
bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+Shift+q exec $swaypy kill

# speciality keys
bindsym XF86AudioMute exec ponymix toggle
bindsym XF86AudioRaiseVolume exec ponymix increase 5%
bindsym XF86AudioLowerVolume exec ponymix decrease 5%

# sway management
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# view organization
bindsym $mod+Shift+p exec $swaypy fullscreen
bindsym $mod+Shift+o exec $swaypy master
bindsym $mod+Shift+i exec $swaypy reset
bindsym $mod+Shift+k exec $swaypy reset-all
bindsym $mod+Shift+j exec $swaypy grid

# workspace/output movement
bindsym $mod+Tab exec $swaypy workspace-focus
bindsym $mod+Shift+Tab exec $swaypy move-focus

# focused view geometry
bindsym $mod+Shift+Left exec $swaypy move-left
bindsym $mod+Shift+Down exec $swaypy move-down
bindsym $mod+Shift+Up exec $swaypy move-up
bindsym $mod+Shift+Right exec $swaypy move-right
bindsym $mod+Left exec $swaypy resize-left
bindsym $mod+Right exec $swaypy resize-right
bindsym $mod+Up resize grow height 10
bindsym $mod+Down resize shrink height 10

workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5

bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
