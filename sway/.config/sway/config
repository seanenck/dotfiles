set $mod Mod1

set $term kitty
set $swaypy wm
set $menu waymenu

gaps outer 5px
gaps inner 5px

exec swayidle -w timeout 1800 'swaylock -f -c 000000'

exec $swaypy focus-model
exec --no-startup-id pipewire --config /home/enck/.config/pipewire.conf

output * bg #695939 solid_color

output DP-1 {
    resolution 3840x2160
}

# process creation/removal
bindsym $mod+t exec $term
bindsym $mod+r exec $menu
bindsym $mod+Shift+q kill

# sway management
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# view organization
bindsym $mod+Shift+f fullscreen

# focused view geometry
bindsym $mod+a focus left
bindsym $mod+s focus down
bindsym $mod+w focus up
bindsym $mod+d focus right
bindsym $mod+h move left
bindsym $mod+j move down
bindsym $mod+k move up
bindsym $mod+l move right
bindsym $mod+Shift+h resize grow width 10
bindsym $mod+Shift+l resize shrink width 10
bindsym $mod+Shift+k resize grow height 10
bindsym $mod+Shift+j resize shrink height 10

#workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

for_window [app_id="gvncviewer"] floating enable
bindsym $mod+m exec pactl set-source-mute @DEFAULT_SOURCE@ false
bindsym --release $mod+m exec pactl set-source-mute @DEFAULT_SOURCE@ true

bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
