#!/bin/sh
DIR="$HOME/.config/voidedtech/sys-updates/"
for SCRIPT in "$DIR"*; do
  NAME="$(basename "$SCRIPT")"
  if [ -x "$SCRIPT" ]; then
    echo "executing: $NAME"
    if ! "$SCRIPT"; then
      echo "[aborting]"
      exit 1
    fi
  else
    echo "WARN: $NAME is not executable, skipping..."
  fi
done
