#!/bin/bash
while : ; do
    while read j; do
        echo "$j" | wmpy
        exitcode="$?"
        case "$exitcode" in
            "0")
                swaymsg splith
                ;;
            "1")
                swaymsg splitv
                ;;
        esac
    done < <(swaymsg -m -t subscribe "['window']")
done
