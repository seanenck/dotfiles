#!/bin/bash
while : ; do
    if ! pgrep -x pipewire > /dev/null; then
        pipewire --config $HOME/.config/pipewire.conf &
    fi
    if ! pgrep -x sway > /dev/null; then
        exit
    fi
    if ! ps aux | grep keyd-application-mapper | grep -q python; then
        keyd-application-mapper -d &
    fi
    sleep 1
done
