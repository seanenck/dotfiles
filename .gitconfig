[core]
    editor = vim
    autocrlf = input
    excludesfile = ~/.gitignore_global
[pager]
    log = /opt/local/share/git/contrib/diff-highlight/diff-highlight | less
    diff = /opt/local/share/git/contrib/diff-highlight/diff-highlight | less
    show = /opt/local/share/git/contrib/diff-highlight/diff-highlight | less
[grep]
    lineNumber = true
[log]
    date = iso-strict
[pull]
    rebase = false
[push]
    default = simple
[status]
    short = true
    branch = true
    showStash = true
    showUntrackedFiles = all
[user]
    name = Sean Enck
    email = enckse@voidedtech.com
    signingKey = 58C85D8DEA8742AFC981BE793058639FBCC82EE9
[help]
    format = man
[commit]
    gpgSign = true
[tag]
    gpgSign = true
[url "can:/mnt/storage/repositories/git/"]
    insteadOf = local:
[url "git@github.com:enckse/"]
    insteadOf = enckse:
[diff "lb"]
    textconv = lb diff
