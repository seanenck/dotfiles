#!/usr/bin/env bash
BIN=$PWD/bin/
CLONE=${BIN}voidedtech.com
rm -rf $BIN
mkdir -p $BIN
git clone https://github.com/enckse/voidedtech.com $CLONE

podman build --volume $BIN:/src -f Containerfile -t website
echo
echo "git status"
echo "==="
git -C $CLONE status
echo
(cd $CLONE && tar cvJf ${BIN}dist.tar.xz dist)
